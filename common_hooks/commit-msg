#!/bin/bash

MESSAGE=$(cat $1)
CHECK_INFP=${MESSAGE:0:5}
CHECK_INF=${MESSAGE:0:4}

if [[ $CHECK_INFP = "INFP-" ]] ; then
  echo "Message is in the right format!"
  exit 0
elif [[ $CHECK_INF = "INF-" ]] ; then
  echo "Message is in the right format!" 
  exit 0
else
  echo "Did not find 'INFP' or 'INF in the commit message, please try again"
  exit 1
fi
